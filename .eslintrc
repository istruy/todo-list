{
  "extends": ["eslint:recommended", "prettier"],
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "init-declarations": ["warn"],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline",
        "imports": "only-multiline",
        "exports": "only-multiline",
        "functions": "never"
      }
    ],
    "indent": ["error", 2]
  }
}
